<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vinhtt.sitemapcrawler.view.MainView"
            prefHeight="800.0" prefWidth="1200.0">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="toolbar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="URL:"/>
            <TextField fx:id="txtUrl" HBox.hgrow="ALWAYS" promptText="https://example.com"/>
            <Button fx:id="btnStart" text="Start Crawl" onAction="#onStartClick"/>
            <Button fx:id="btnStop" text="Stop" onAction="#onStopClick" disable="true"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.25">
            <VBox fx:id="propertiesPane" spacing="10" visible="false" managed="false" style="-fx-background-color: #252526; -fx-padding: 15;">
                <Label text="Node Properties" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;"/>

                <Label text="Title:" style="-fx-text-fill: #888888;"/>
                <Label fx:id="lblNodeTitle" wrapText="true" style="-fx-text-fill: white; -fx-font-size: 14px;"/>

                <Separator/>

                <Label text="URL:" style="-fx-text-fill: #888888;"/>
                <TextField fx:id="tfNodeUrl" editable="false" style="-fx-background-color: #333; -fx-text-fill: #ccc;"/>

                <Label text="Type:" style="-fx-text-fill: #888888;"/>
                <Label fx:id="lblNodeType" style="-fx-text-fill: #007acc; -fx-font-weight: bold;"/>

                <Region VBox.vgrow="ALWAYS"/>

                <Button text="Open in Browser â†—" onAction="#onOpenBrowserClick" maxWidth="Infinity" style="-fx-background-color: #007acc; -fx-text-fill: white;"/>
            </VBox>

            <WebView fx:id="graphWebView"/>
        </SplitPane>
    </center>

    <bottom>
        <VBox>
            <ListView fx:id="listLogs" prefHeight="100"/>
            <HBox spacing="10" styleClass="status-bar">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
                <Label fx:id="lblStatus" text="Ready"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>